#include<iostream>
using namespace std;

int main() 
{
    unsigned long long factorial = 1;
    int number;
    cout << "Enter a positive integer: ";
    cin >> number;
    for(int i = 1; i <= number; ++i) {
        factorial *= i;
    }
    cout << "Factorial of " << number << " = " << factorial;    
    return 0;
}
